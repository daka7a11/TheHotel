@using TheHotel.ViewModels.Contacts

@model QuestionViewModel

@{
    this.ViewData["Title"] = "Contacts";
}

<partial name="_UnderConstruction" />

<div>
    <h1 class="text-center text-light">Контакти</h1>
</div>

<div class="row">
    <div class="col-md-4">
        asd
    </div>
    <div class="col-md-8">
        <form method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FirstName">Име</label>
                        <input class="form-control" asp-for="FirstName" />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Имейл</label>
                        <input class="form-control" asp-for="Email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone">Телефон</label>
                        <input class="form-control" asp-for="Phone" />
                        <span class="text-danger" asp-validation-for="Phone"></span>
                    </div>
                </div>
                <div class="col-md-8 text-center">
                    <div class="form-group">
                        <label asp-for="Title">Заглавие</label>
                        <input class="form-control" asp-for="Title" />
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Text">Запитване</label>
                        <textarea rows="4" class="form-control" asp-for="Text"></textarea>
                        <span class="text-danger" asp-validation-for="Text"></span>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-light btn-lg" type="submit">Изпрати запитване</button>
            </div>
        </form>
    </div>
</div>