@using TheHotel.ViewModels.Contacts

@model IEnumerable<AllQuestionsViewModel>

@{
    ViewData["Title"] = "Questions";
}

@if (Model.Count() == 0)
{
    <h2 class="text-center text-light">Няма запитвания!</h2>
}
else
{
    <h1 class="text-center text-light mt-2 mb-4">Запитвания</h1>

    <table class="table table-hover table-striped table-lg text-light">
        <tr class="text-center bg-secondary text-light shadow">
            <th>Име</th>
            <th>Имейл</th>
            <th>Телефон</th>
            <th>Заглавие</th>
        </tr>
        @foreach (var question in Model)
        {
            <tr onmouseover="this.style.backgroundColor = 'orange'"
                onmouseout="this.style.backgroundColor = 'transparent'"
                onclick="window.location = '/Contacts/QuestionDetails?questionId=@question.Id'"
                class="text-center"
                style="cursor:pointer">
                <td>@question.FirstName</td>
                <td>@question.Email</td>
                <td>@question.Phone</td>
                <td>@question.Title</td>
            </tr>
        }
    </table>
}