@using TheHotel.Common

@model IEnumerable<string>

@{
    ViewData["Title"] = "Add images to gallery";
}

<div class="text-center m-5">
    <h1 class="text-center text-light">Добавяне на снимка/и към галерията</h1>
</div>

<div class="text-center col-md-6 offset-3">
    <form method="post" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group">
            <input type="file" name="images" multiple />
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-warning" type="submit">Добави</button>
        </div>
    </form>
</div>