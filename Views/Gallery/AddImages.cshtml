@model IEnumerable<string>

@{
    ViewData["Title"] = "Add images to gallery";
}

<div class="text-center m-5">
    <h2 class="text-center text-light">Добавяне на снимка/и към галерията</h2>
</div>

<div class="text-center col-md-6 offset-3">
    <form method="post" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group">
            <label class="m-4 text-warning" for="images">Изберете снимка/и</label>
            <input type="file" name="images" multiple />
        </div>
        <div class="form-group m-5">
            <button class="btn btn-lg btn-warning" type="submit">Добави</button>
        </div>
    </form>
</div>