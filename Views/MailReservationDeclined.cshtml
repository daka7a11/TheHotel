    <tr>
        <th>Клиент</th>
        <th></th>
        <th>Стая</th>
        <th></th>
        <th>Резервация</th>
    </tr>
    <tr>
        <td>
            <table>
                <tr>
                    <th>Име</th>
                    <th>Фамилия</th>
                    <th>ЕГН</th>
                    <th>Телефон</th>
                </tr>
                <tr>
                    <td>@Model.ClientFirstName</td>
                    <td>@Model.ClientLastName</td>
                    <td>@Model.ClientPersonalIdentityNumber</td>
                    <td>@Model.ClientPhone</td>
                </tr>
            </table>
        </td>
        <td>
            <table>
                <tr>
                    <th></th>
                </tr>
                <tr>
                    <td></td>
                </tr>
            </table>
        </td>
        <td>
            <table>
                <tr>
                    <th>№</th>
                    <th>Вид</th>
                    <th>Етаж</th>
                    <th>Цена</th>
                </tr>
                <tr>
                    <td>@Model.RoomId</td>
                    <td>@Model.RoomType</td>
                    <td>@Model.RoomFloor</td>
                    <td>@Model.RoomPrice</td>
                </tr>
            </table>
        </td>
        <td>
            <table>
                <tr>
                    <th></th>
                </tr>
                <tr>
                    <td></td>
                </tr>
            </table>
        </td>
