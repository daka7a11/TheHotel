            <table>
                <tr>
                    <th>Дата на настаняване</th>
                    <th>Дата на напускане</th>
                </tr>
                <tr>
                    <td>@Model.AccommodationDate.ToShortDateString()</td>
                    <td>@Model.DepartureDate.ToShortDateString()</td>
                </tr>
            </table>
        </td>
    </tr>
</table>