@using TheHotel.ViewModels.Rooms
@model AllViewModel

@{
    this.ViewData["Title"] = "Rooms";
}

<div class="jumbotron-fluid border border-top-0" style="background-color: navajowhite; height:50px">
    <form method="post">
        <div class="text-center">
            <div class="d-inline-block col-5">
                <label class="font-weight-bold" for="accommodationDate">Accommodation date: </label>
                <input type="date" name="accommodationDate" value="" />
            </div>
            <div class="d-inline-block col-5">
                <label class="font-weight-bold" for="departureDate">Departure date: </label>
                <input type="date" name="departureDate" value="" />
            </div>

            <input class="btn btn-success" type="submit" name="searchBtn" value="Search" />
        </div>
    </form>
</div>
@if (Model.AvailableRoomsViewModel != null)
{
    <div class="alert alert-danger text-center">
        <h3 class="text-success">@Model.AvailableRoomsViewModel.AccommodationDate.Value.ToString("dd.MM.yyyy") - @Model.AvailableRoomsViewModel.DepartureDate.Value.ToString("dd.MM.yyyy")</h3>
    </div>
}
<h1 class="text-center">Rooms</h1>
<table class="table table-hover table-striped">
    <tr class="text-center">
        <th>№</th>
        <th style="width: 10%">Room type</th>
        <th style="width: 8%">Size</th>
        <th>Floor</th>
        <th>Price</th>
        <th class="border-right-0">Description</th>
        <th></th>
    </tr>
    @foreach (var room in Model.AllRoomsViewModel.OrderBy(x => x.Price))
    {
        <tr>
            <td>@room.Id</td>
            <td>@room.RoomType</td>
            <td>@room.Size m&sup2;</td>
            <td>@room.Floor</td>
            <td class="font-weight-bold">@room.Price$</td>
            <td>@room.Description</td>
            <td class="col-sm-2">
                <div class="d-inline-block text-center">
                    <a class="btn btn-warning" href="/Rooms/Details?roomId=@room.Id">Details</a>
                    <a class="btn btn-success" href="/Rooms/ClientPin?roomId=@room.Id">Hire</a>
                </div>
            </td>
        </tr>
    }
</table>
