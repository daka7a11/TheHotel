@using TheHotel.ViewModels.Rooms

@model ICollection<UndeleteViewModel>

@{
    ViewData["Title"] = "Udelete Rooms";
}

@if (Model.Count == 0)
{
    <h2 class="text-center text-light m-4">Няма изтрити стаи!</h2>
}
else
{
    <h2 class="text-center text-light m-5">Изтрити стаи</h2>

    <table class="table table-hover table-striped text-light m-4">
        <tr class="text-center text-warning">
            <th>№</th>
            <th>Размер</th>
            <th>Етаж</th>
            <th>Цена</th>
            <th>Описание</th>
            <th>Изтрита на</th>
        </tr>
        @foreach (var room in Model)
        {
            <tr class="text-center"
                onmouseover="this.style.color = 'orange'"
                onmouseout="this.style.color = 'white'"
                onclick="window.location.href = '/Rooms/Details?roomId=@room.Id'"
                style="cursor:pointer">
                <td>@room.Id</td>
                <td>@room.Size m&sup2;</td>
                <td>@room.Floor</td>
                <td>@room.Price лв.</td>
                <td>@room.Description</td>
                <td>@room.DeletedOn.ToLocalTime().ToString("g")</td>
            </tr>
        }
    </table>
}