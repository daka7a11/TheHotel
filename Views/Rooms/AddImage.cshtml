@model TheHotel.ViewModels.Rooms.AddImageToRoomViewModel

<form method="post">
    <div class="d-flex justify-content-center">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="RoomId"> </label>
            <input class="form-control text-center font-weight-bolder" type="number" name="roomId" value="@Model.RoomId" readonly />
        </div>
        <br />
        <div class="form-group">
            <label asp-for="ImageUrl"> </label>
            <input class="form-control" type="text" name="imageUrl" value="" />
        </div>
        <div>
            <input class="form-control" type="submit" name="submitBtn" value="Добави" />
        </div>
    </div>
</form>